{
  "include": [
    "./*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/**/*.ts",
  ],
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*" : ["./src/*"]
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "sourceMap": true
    }
  }
}
