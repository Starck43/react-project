{
	"include": [
		"./*.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./config/**/*.ts"
	],
	"compilerOptions": {
		"outDir": "./build/",
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		},
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es6",
		"strict": true,
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS",
			"sourceMap": true
		}
	}
}
