{
	"include": [
		"./*.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./config/**/*.ts",
		"./config/**/*.tsx"
	],
	"exclude": ["node_modules", "cypress", "./cypress.config.ts"],
	"compilerOptions": {
		"outDir": "./build/",
		"baseUrl": ".",
		"paths": {
			// "*": ["./src/*"]
			"@/*": ["./src/*"]
		},
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		// "types": ["jest", "node", "@types/testing-library__jest-dom"]
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS",
			"sourceMap": true
		}
	}
}
